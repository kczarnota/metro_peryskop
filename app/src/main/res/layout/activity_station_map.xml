<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.konrad.metroperyskop.view.StationMapActivity"
    android:background="@drawable/ic_stacja_plan_bg_01"
    android:id="@+id/station_background">

    <Button
        android:id="@+id/button10"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignStart="@+id/button9"
        android:layout_weight="1"
        android:background="@drawable/ic_24202"
        android:onClick="stationClicked"
        android:text="1"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_weight="1"
        android:background="@drawable/ic_24202"
        android:onClick="stationClicked"
        android:text="2"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_marginTop="13dp"
        android:layout_weight="1"
        android:background="@drawable/ic_24202"
        android:onClick="stationClicked"
        android:text="3"/>

    <Button
        android:id="@+id/button11"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="47dp"
        android:layout_weight="1"
        android:background="@drawable/ic_24202"
        android:onClick="stationClicked"
        android:text="4"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button9"
        android:layout_weight="1"
        android:background="@drawable/ic_24202"
        android:onClick="stationClicked"
        android:text="5"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignStart="@+id/button7"
        android:layout_weight="1"
        android:background="@drawable/ic_24202"
        android:onClick="stationClicked"
        android:text="6"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button4"
        android:layout_marginBottom="84dp"
        android:layout_weight="1"
        android:background="@drawable/ic_24202"
        android:onClick="stationClicked"
        android:text="7"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button5"
        android:layout_alignStart="@+id/button8"
        android:layout_marginBottom="68dp"
        android:layout_weight="1"
        android:background="@drawable/ic_24202"
        android:onClick="stationClicked"
        android:text="8"/>

</RelativeLayout>
